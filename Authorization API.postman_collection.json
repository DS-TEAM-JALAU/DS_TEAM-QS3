			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has date, requests, bytes, plan, plan_expires, daily_requests_limit, daily_bytes_limit, and status fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('date');",
							"    pm.expect(jsonData).to.have.property('requests');",
							"    pm.expect(jsonData).to.have.property('bytes');",
							"    pm.expect(jsonData).to.have.property('plan');",
							"    pm.expect(jsonData).to.have.property('plan_expires');",
							"    pm.expect(jsonData).to.have.property('daily_requests_limit');",
							"    pm.expect(jsonData).to.have.property('daily_bytes_limit');",
							"    pm.expect(jsonData).to.have.property('status');",
							"});",
							"",
							"pm.test(\"Status is ACTIVE\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.equal('ACTIVE');",
							"});"
